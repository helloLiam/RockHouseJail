<!--pages/backpack/details/index.wxml-->
<view class="backpack-details-container" bindtouchstart="touchStart" bindtouchend="touchEnd">
  <view class="details-overview">
    <view class="main">
      <view class="phoneticize"><image src="{{phoneticize}}" /></view>
      <view class="font"><image src="{{character}}" /></view>
      <view class="dictionary">{{child.hsk}}</view>
    </view>
    <audio src="{{innerAudioContextSrc}}" id="audio-sky">
      <span class="voice" bindtap="audioPlay"><image src="{{voice}}" /></span>
    </audio>
    <span class="arrow"><image src="{{arrow}}" /></span>
    <span class="background-image"><image src="{{sky_1_bg}}" /></span>
  </view>
  <view class="evolutionProcess">
    <span class="key">{{row.evolutionProcess}}</span>
    <view class="children">
      <view class="evolution-sky-0">
        <span class="evolution-sky-child-top"><image src="{{evolution_01}}" /></span>
        <span class="evolution-sky-child-bottom">{{child.evolutionSky01}}</span>
      </view>
      <span class="evolution-arrow"><image src="{{arrow}}" /></span>
      <view class="evolution-sky-n">
        <span class="evolution-sky-child-top"><image src="{{evolution_02}}" /></span>
        <span class="evolution-sky-child-bottom">{{child.evolutionSky02}}</span>
      </view>
      <span class="evolution-arrow"><image src="{{arrow}}" /></span>
      <view class="evolution-sky-n">
        <span class="evolution-sky-child-top"><image src="{{evolution_03}}" /></span>
        <span class="evolution-sky-child-bottom">{{child.evolutionSky03}}</span>
      </view>
      <span class="evolution-arrow"><image src="{{arrow}}" /></span>
      <view class="evolution-sky-n">
        <span class="evolution-sky-child-top"><image src="{{evolution_04}}" /></span>
        <span class="evolution-sky-child-bottom">{{child.evolutionSky04}}</span>
      </view>
      <span class="evolution-arrow"><image src="{{arrow}}" /></span>
      <view class="evolution-sky-n">
        <span class="evolution-sky-child-top"><image src="{{evolution_05}}" /></span>
        <span class="evolution-sky-child-bottom">{{child.evolutionSky05}}</span>
      </view>
    </view>
  </view>
  <view class="strokeSequence">
    <view>
      <span class="key">{{row.strokeSequence}}</span>
      <navigator class="details-navigator-brush" hover-class="none" url="./copy/index">
        <span class="sequenceBrush"><image src="{{brush}}" /></span>
      </navigator>
    </view>
    <view class="strokeSequenceChildren">
      <image src="{{strokeSequence}}" />
    </view>
  </view>

  <view class="global-button-brush">
    <navigator class="details-navigator-brush" hover-class="none" url="./copy/index">
      <span class="radiusFramework-brush"><image src="{{whitebrush}}"/></span>
    </navigator>
  </view>
</view>